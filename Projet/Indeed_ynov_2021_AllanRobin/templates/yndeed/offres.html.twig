{% extends 'base.html.twig' %}

{% block title %}Hello IndeedController!
{% endblock %}

{% block body %}
	<section class="offres">
		{% for offre in offres %}
			<h2>{{offre.Title}}</h2>
			<h3>Description</h3>
			<p>{{offre.Description}}</p>
			<p>Ville:
				{{offre.Ville}}</br>
				Type de contrat:
				{{offre.TypeDeContrat}}</br></p>

			<a href="{{path('offreShow', {'id':offre.id}) }}" class="btn btn-primary">Montrer</a>


		{% endfor %}


	</section>


{% endblock %}
